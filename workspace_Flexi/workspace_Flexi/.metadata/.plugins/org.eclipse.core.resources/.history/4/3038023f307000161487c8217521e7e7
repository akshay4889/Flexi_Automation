package com.fl.test;

import java.io.FileInputStream;
import java.io.FileNotFoundException;  
import java.io.IOException;
import java.util.Properties;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;

public class GenericKeywords {
	public FileInputStream fileInput;
	public Properties prop;
	public WebDriver driver;
	
	public void file(){
		try{
			fileInput = new FileInputStream(System.getProperty("//Automation_Framework//config//Helper.properties"));
		}
		catch (FileNotFoundException e){
			e.printStackTrace();
		}
		prop = new Properties();
		try {
			prop.load(fileInput);
		} catch (IOException e1) {
			e1.printStackTrace();
		}
	}
	
	public void login(String email, String password){
		driver.findElement(By.id(prop.getProperty("LoginEmail"))).sendKeys(email);
		driver.findElement(By.id(prop.getProperty("LoginPassword"))).sendKeys(password);
		driver.findElement(By.xpath(prop.getProperty("LoginButton"))).click();
	}
	
}